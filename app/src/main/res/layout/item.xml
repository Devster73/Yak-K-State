<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#313131"
    app:cardCornerRadius="8dp"

    app:cardElevation="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/ChatText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:autoSizeTextType="uniform"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/locationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Unknown"
            android:textColor="#D21AFF" />

        <ImageView
            android:id="@+id/willyImage"
            android:layout_width="38dp"
            android:layout_height="25dp"
            android:layout_weight=".25"
            android:visibility="gone"
            app:srcCompat="@drawable/caty" />

        <LinearLayout
            android:id="@+id/likesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2" />

            <ImageButton
                android:id="@+id/upvoteBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/asset17" />

            <TextView
                android:id="@+id/likesText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="10"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/downvoteBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#00FFFFFF"
                android:rotation="180"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/asset17" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>